<h1>Users#register</h1>
<p>Find me in app/views/users/register.html.erb</p>

<%= form_tag("/new", :method => "post") do %>
    <table>
        <tr>
            <td>Введите имя</td>
            <td><%= text_field_tag :name %></td>
        </tr>
            <tr>
            <td>Введите email</td>
            <td><%= email_field_tag :email %></td>
        </tr>
        <tr>
            <td>Введите пароль</td>
            <td><%= password_field_tag :password %></td>
        </tr>
        <tr>
            <td>Повторите пароль</td>
            <td><%= password_field_tag :another_password %></td>
        </tr>
        <tr>
            <td><%= submit_tag "Зарегистрироваться" %></td>
            <td><span style="color: red;"><%= @error %></span></td>
        </tr>
        <tr style="font-style: italic;">
            <td><span style="font-size: medium;">Уже зарегистрированы?</span></td>
            <td><a href="/login" style="font-size: medium;">Войти</a></td>
        </tr>
    </table>
<% end %>
